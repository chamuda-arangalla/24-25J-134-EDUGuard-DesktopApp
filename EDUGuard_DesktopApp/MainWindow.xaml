<Window x:Class="EDUGuard_DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDUGuard_DesktopApp"
        mc:Ignorable="d"
        Title="EDUGuard" Height="450" Width="800">
    <Grid>
        <!-- Define Three Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Logo -->
            <RowDefinition Height="*" />
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#0CB912" Grid.Row="0" Height="60">
            <!-- Title -->
            <TextBlock Text="EDUGuard" FontSize="24" FontWeight="Bold" Foreground="White" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>

        <!-- Logo -->
        <Image Source="/Assets/EDUGuard-logo.png" Grid.Row="1" Width="148" Height="148"
               HorizontalAlignment="Center" Margin="0,10,0,10" />

        <!-- Main Content -->
        <ContentControl x:Name="MainContent" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
